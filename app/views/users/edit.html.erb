<p id = "notice"></p>
<div class = 'container'>
  <% if @user.errors.any? %>
		<div id="error_explanation">
			<h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
			<ul>
				<% @user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
  <div class 'row'>
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0  mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user,local: true do |f| %>
      <div class = "form-group">
        <label for = "name">Name</label>
       <%= f.text_field :name, class: "form-control name" %>
      </div>

      <div class = "form-group">
        <label for = "image">Image</label>
        <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>
      </div>

      <div class = "form-group">
        <label for ="introduction">introduction</label>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>

      <div class = "form-group">
        <%= f.submit class:"btn btn-secondary"  %>
      </div>
      <%end%>
    </div>
  </div>
</div>
